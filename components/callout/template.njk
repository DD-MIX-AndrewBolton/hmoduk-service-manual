{% set headingLevel = params.headingLevel if params.headingLevel else 3 %}
<div class="moduk-callout{%- if params.classes %} {{ params.classes }}{% endif %}"{%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
  <h{{ headingLevel }} class="moduk-callout__label">{{ params.title }}</h{{ headingLevel }}>
  <div class="moduk-callout__content">
    {{ (params.content if params else "") | safe }}
  </div>
  <ul class="moduk-callout__list">
    {%- for item in params.items %}
    <li>
      <a class="govuk-link govuk-link--no-visited-state" href="{{ item.href }}">{{ item.text }}</a>
    </li>
    {%- endfor %}
  </ul> 
</div>
