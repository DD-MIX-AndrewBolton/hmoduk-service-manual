{% extends "base.njk" %}

{%- if breadcrumb !== false %}
  {% block breadcrumb %}
    {% include "_breadcrumb.njk" %}
  {% endblock %}
{% endif -%}

{% block body %}

<div class="govuk-width-container">

  <div class="govuk-main-wrapper">

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-xl">{{ sectionTitle }}</span>
        <h1 class="govuk-heading-xl">{{ pageTitle }}</h1>
      </div>
    </div>

    <div class="govuk-grid-row">

      <div class="govuk-grid-column-one-third position-sticky">
        {% block contentsList %}{% endblock %}
      </div>

      <div class="govuk-grid-column-two-thirds">
        {% block bodyContent %}{% endblock %}
        {% include "_contact-team.njk" ignore missing %}
        {%- if dateUpdated %}<p class="govuk-body govuk-!-font-size-14 govuk-!-margin-top-8 govuk-!-margin-bottom-0">Updated {{ dateUpdated }}</p>{% endif -%}
      </div>

    </div>

  </div>

</div>

{% endblock %}