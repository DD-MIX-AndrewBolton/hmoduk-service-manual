{%- from "system/component.njk" import component -%}
{%- from "system/modukcomponent.njk" import modukcomponent -%}
<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% if title %}{{ title }} - {{ meta.serviceName }}{% else %}{{ meta.serviceName }}{% endif %}</title>

    {# Search Engine #}
    <meta name="description" content="{% if meta.serviceDescription %}{{ meta.serviceDescription }}{% else %}Helping you meet service standards and do your role in Defence.{% endif %}">

    {# Theme colour #}
    <meta name="theme-color" content="#4D2942">

    {# Windows tiles #}
    <meta name="msapplication-TileColor" content="#4D2942">
    <meta name="msapplication-TileImage" content="{{ meta.url }}assets/images/tile-310x150.png">
    <meta name="msapplication-square70x70logo" content="{{ meta.url }}assets/images/tile-70x70.png">
    <meta name="msapplication-square150x150logo" content="{{ meta.url }}assets/images/tile-150x150.png">
    <meta name="msapplication-wide310x150logo" content="{{ meta.url }}assets/images/tile-310x150.png">
    <meta name="msapplication-square310x310logo" content="{{ meta.url }}assets/images/tile-310x310.png">

    {# iOS #}
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="{{ meta.serviceName }}">

    {# Apple touch icon #}
    <link rel="apple-touch-icon" href="{{ meta.url }}assets/images/apple-touch-icon.png">

    {# Mask icon #}
    <link rel="mask-icon" href="{{ meta.url }}assets/images/mask-icon.svg" color="#000000">

    {# Fav icon #}
    <link rel="icon" href="{{ meta.url }}assets/images/favicon.png">

    {# Opengraph #}
    <meta property="og:image" content="{{ meta.url }}assets/images/opengraph.png">

    {# Stylesheet #}
    <link rel="stylesheet" href="{{ meta.url }}assets/styles/main.css">

  </head>

  <body>

    <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>

    {% include "header.njk" ignore missing %}
    {% include "phase-banner.njk" ignore missing %}

    <main class="content" id="content">
      {% block body %}{% endblock %}
    </main>

    {% include "feedback.njk" ignore missing %}
    {% include "footer.njk" ignore missing %}

    <script src="{{ meta.url }}assets/scripts/scripts.js"></script>

    {% block pageScripts %}{% endblock %}

  </body>
</html>
