{% extends "layouts/base.njk" %}

{% block body %}

<div class="govuk-width-container">

  {% set navPages = collections.all | eleventyNavigationBreadcrumb(eleventyNavigation.key, {includeSelf: true, allowMissing: true}) %}

  <div class="govuk-breadcrumbs">

    <ol class="govuk-breadcrumbs__list">

      <li class="govuk-breadcrumbs__list-item"><a class="govuk-breadcrumbs__link" href="{{ '/' | url }}">Home</a></li>
    
      {%- for entry in navPages %}
        <li class="govuk-breadcrumbs__list-item">
          <a class="govuk-breadcrumbs__link" href="{{ entry.url | url }}">{{ entry.title }}</a>
        </li>
      {%- endfor %}

    </ol>

  </div>

</div>

<div class="govuk-width-container">

  <div class="govuk-main-wrapper">

    <div class="govuk-grid-row">
      
      <div class="govuk-grid-column-two-thirds">

        {% if section %}
          <span class="govuk-caption-xl">{{ section }}</span>
        {% endif %}

        <h1 class="govuk-heading-xl">{{ title }}</h1>

      </div>

    </div>

    <div class="govuk-grid-row">

      <div class="govuk-grid-column-one-third position-sticky">
        {{ content | toc | safe }}
      </div>

      <div class="govuk-grid-column-two-thirds">
        
        <div class="moduk-prose">
          {{ content | safe }}
        </div>

        {% include "contact-team.njk" ignore missing %}
        {% include "published-date.njk" ignore missing %}

      </div>

    </div>

  </div>

</div>

{% endblock %}
