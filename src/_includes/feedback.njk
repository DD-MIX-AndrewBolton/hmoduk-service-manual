<div class="moduk-feedback js-feedback govuk-!-display-none-print">

  <div class="moduk-feedback__prompt js-feedback-prompt no-js:is-hidden">

    <div class="govuk-width-container">

      <div class="moduk-feedback__prompt">

        <div class="moduk-feedback__prompt-questions js-feedback-question">

          <h2 class="moduk-feedback__prompt-question">Did you find what you were looking for?</h2>

          <ul class="moduk-feedback__option-list">
            <li class="moduk-feedback__option-list-item"><button class="govuk-button moduk-feedback__prompt-link js-feedback-yes">Yes <span class="govuk-visually-hidden">this page has what I am looking for</span></button></li>
            <li class="moduk-feedback__option-list-item"><button class="govuk-button moduk-feedback__prompt-link js-feedback-no" aria-controls="did-not-find" aria-expanded="false">No <span class="govuk-visually-hidden">this page does not have what I am looking for</span></button></li>
          </ul>

        </div>

        <div class="moduk-feedback__prompt-success js-feedback-success js:is-hidden" role="alert">Thank you for your feedback</div>

      </div>

    </div>

  </div>

  <form class="moduk-feedback__form js-feedback-form js:is-hidden" method="POST" action="https://formspree.io/f/meqdpdjn" id="did-not-find">

    <div class="govuk-width-container">

      {{ component('button', {
        classes: "govuk-button--secondary moduk-feedback__close js-feedback-close no-js:is-hidden",
        text: "Close",
        type: "button"
      }) }}

      <div class="govuk-grid-row">

        <div class="govuk-grid-column-two-thirds">

          <h2 class="govuk-heading-m">Help improve the Defence Service Manual</h2>

          {{ component('textarea', {
            name: "what-guidance-were-you-looking-for",
            id: "what-guidance-were-you-looking-for",
            rows: 3,
            label: {
              text: "What guidance were you looking for?"
            },
            hint: {
              text: "Include details, questions and suggestions."
            },
            spellcheck: true
          }) }}

          {{ component('input', {
            label: {
              text: "Email address (optional)"
            },
            type: "email",
            hint: {
              text: "We will only contact you to discuss your feedback."
            },
            id: "email",
            name: "email"
          }) }}

          {{ component('button', {
            classes: "govuk-!-margin-bottom-0",
            text: "Send feedback",
            type: "submit"
          }) }}

        </div>

      </div>

    </div>

  </form>

</div>
